<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/popup_window_bg"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">


    <ImageView
        android:id="@+id/disaster_logo"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="13dp"
        android:scaleType="fitXY" />


    <TextView
        android:id="@+id/tv_pop_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@+id/disaster_logo"
        android:text="Disaster Report"
        android:textColor="@color/black" />

    <ImageButton
        android:id="@+id/close_btn"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/closebutton"
        android:layout_alignParentRight="true"/>

    <View
        android:id="@+id/divide_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/tv_pop_name"
        android:layout_marginBottom="10dp"
        android:background="@color/grey_define" />


    <ScrollView

        android:id="@+id/disasterReportScrollView"
        android:layout_width="match_parent"
        android:layout_height="249dp"
        android:layout_below="@+id/divide_line"
        android:layout_marginBottom="10dp"
        android:fillViewport="false"
        android:orientation="vertical"
        android:padding="10dp">

        <RelativeLayout
            android:id="@+id/reportrelativeLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/location_intro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="2dp"
                android:text="Location:"
                android:textSize="15sp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/location_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="2dp"
                android:textSize="15sp"
                android:layout_toRightOf="@+id/location_intro"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/type_intro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/location_intro"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="2dp"
                android:text="Type:"
                android:textSize="15sp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/type_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/location_intro"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="2dp"
                android:textSize="15sp"
                android:layout_toRightOf="@+id/type_intro"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/rtime_intro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/type_intro"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="2dp"
                android:text="Report Time:"
                android:textSize="15sp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/rtime_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/type_details"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="2dp"
                android:textSize="15sp"
                android:layout_toRightOf="@+id/rtime_intro"
                android:textColor="@color/black" />

<!--            <TextView-->
<!--                android:id="@+id/htime_intro"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_below="@+id/rtime_intro"-->
<!--                android:layout_alignParentLeft="true"-->
<!--                android:layout_marginLeft="8dp"-->
<!--                android:layout_marginTop="2dp"-->
<!--                android:textSize="15sp"-->
<!--                android:text="Happened Time:"-->
<!--                android:textColor="@color/black" />-->

<!--            <TextView-->
<!--                android:id="@+id/htime_details"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_below="@+id/rtime_details"-->
<!--                android:layout_marginLeft="8dp"-->
<!--                android:layout_marginTop="2dp"-->
<!--                android:textSize="15sp"-->
<!--                android:layout_toRightOf="@+id/htime_intro"-->
<!--                android:textColor="@color/black" />-->

            <TextView
                android:id="@+id/report_injured_intro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rtime_intro"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="2dp"
                android:textSize="15sp"
                android:text="Report Injured:"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/report_injured_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rtime_details"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="2dp"
                android:textSize="15sp"
                android:layout_toRightOf="@+id/report_injured_intro"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/otherinfo_intro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/report_injured_intro"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="2dp"
                android:text="Other Information:"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/otherinfo_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/report_injured_details"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="2dp"
                android:textSize="15sp"
                android:layout_toRightOf="@+id/otherinfo_intro"
                android:textColor="@color/black" />

            <ImageButton
                android:id="@+id/report_confirmed"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="200dp"
                android:layout_marginRight="150dp"
                android:background="@drawable/button_report_confirm" />

        </RelativeLayout>

    </ScrollView>


</RelativeLayout>