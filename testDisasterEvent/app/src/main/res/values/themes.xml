    <style name="Theme.TestDisasterEvent" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="selectableItemBackground">@android:color/transparent</item>
        <item name="android:actionBarItemBackground">@android:color/transparent</item>
        <item name="android:actionModeBackground">@android:color/transparent</item>
        <!-- Customize your theme here. -->
    </style>

