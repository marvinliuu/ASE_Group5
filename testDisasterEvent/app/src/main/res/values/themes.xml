<resources xmlns:tools="http://schemas.android.com/tools">
    Base application theme.

    <style name="Theme.TestDisasterEvent" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light_blue_define</item>
        <item name="colorPrimaryVariant">@color/red_define</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="selectableItemBackground">@android:color/transparent</item>
        <item name="android:actionBarItemBackground">@android:color/transparent</item>
        <item name="android:actionModeBackground">@android:color/transparent</item>
        <!-- Customize your theme here. -->
    </style>


    <!-- No original bar setting -->
    <style name="Theme.NoTitle" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowActionBar">false</item>

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:colorControlHighlight">@android:color/transparent</item>
    </style>

    <style name="ipopwindow_anim_style">
        <item name="android:windowEnterAnimation">@anim/popshow_anim</item>
        <!-- show animation xml -->
        <item name="android:windowExitAnimation">@anim/pophidden_anim</item>
        <!-- hidden animation xml -->
    </style>

    <style name="Theme.TestDisasterEvent.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.TestDisasterEvent.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.TestDisasterEvent.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>